<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:elevation="4dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre de la carrera -->
        <TextView
            android:id="@+id/tvNombreCarrera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_school"
            android:drawablePadding="8dp"
            android:text="Nombre Carrera"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Duraci贸n de la carrera -->
        <TextView
            android:id="@+id/tvDuracionCarrera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_timer"
            android:drawablePadding="8dp"
            android:text="Duraci贸n: "
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <!-- Botones de Editar y Eliminar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Bot贸n Editar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditCarrera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_edit"
                android:drawablePadding="8dp"
                android:text="Editar"
                android:textColor="@color/button_text"
                app:backgroundTint="@color/button_background"
                app:cornerRadius="8dp" />

            <!-- Bot贸n Eliminar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteCarrera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_delete"
                android:drawablePadding="8dp"
                android:text="Eliminar"
                android:textColor="@color/error_text"
                app:backgroundTint="@color/error_color"
                app:cornerRadius="8dp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
